<?xml version="1.0"?>
<Ontology xmlns="http://www.semanticweb.org/ontologies/abc-university#"
     xml:base="http://www.semanticweb.org/ontologies/abc-university"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     ontologyIRI="http://www.semanticweb.org/ontologies/abc-university">

    <owl:Class rdf:about="#University"/>
    <owl:Class rdf:about="#Department"/>
    <owl:Class rdf:about="#Course"/>
    <owl:Class rdf:about="#BTech"/>
    <owl:Class rdf:about="#MTech"/>
    <owl:Class rdf:about="#PhD"/>
    <owl:Class rdf:about="#Person"/>
    <owl:Class rdf:about="#Student"/>
    <owl:Class rdf:about="#Faculty"/>
    <owl:Class rdf:about="#Semester"/>
    <owl:Class rdf:about="#Enrollment"/>
    <owl:Class rdf:about="#CSE"/>
    <owl:Class rdf:about="#ECE"/>
    <owl:Class rdf:about="#Mathematics"/>

    <owl:Class rdf:about="#Student">
        <rdfs:subClassOf rdf:resource="#Person"/>
    </owl:Class>
    <owl:Class rdf:about="#Faculty">
        <rdfs:subClassOf rdf:resource="#Person"/>
    </owl:Class>
    <owl:Class rdf:about="#BTech">
        <rdfs:subClassOf rdf:resource="#Course"/>
    </owl:Class>
    <owl:Class rdf:about="#MTech">
        <rdfs:subClassOf rdf:resource="#Course"/>
    </owl:Class>
    <owl:Class rdf:about="#PhD">
        <rdfs:subClassOf rdf:resource="#Course"/>
    </owl:Class>
    <owl:Class rdf:about="#CSE">
        <rdfs:subClassOf rdf:resource="#Department"/>
    </owl:Class>
    <owl:Class rdf:about="#ECE">
        <rdfs:subClassOf rdf:resource="#Department"/>
    </owl:Class>
    <owl:Class rdf:about="#Mathematics">
        <rdfs:subClassOf rdf:resource="#Department"/>

    <owl:ObjectProperty rdf:about="#enrolledIn">
        <rdfs:domain rdf:resource="#Student"/>
        <rdfs:range rdf:resource="#Course"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#teaches">
        <rdfs:domain rdf:resource="#Faculty"/>
        <rdfs:range rdf:resource="#Course"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#belongsToDepartment">
        <rdfs:domain rdf:resource="#Faculty"/>
        <rdfs:range rdf:resource="#Department"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#offeredBy">
        <rdfs:domain rdf:resource="#Course"/>
        <rdfs:range rdf:resource="#Department"/>
        <rdf:type rdf:resource="owl:FunctionalProperty"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#hasDepartment">
        <rdfs:domain rdf:resource="#University"/>
        <rdfs:range rdf:resource="#Department"/>
    </owl:ObjectProperty>


    <owl:DatatypeProperty rdf:about="#hasName">
        <rdfs:domain rdf:resource="#Person"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasID">
        <rdfs:domain rdf:resource="#Person"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#FunctionalProperty"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:about="#hasCredits">
        <rdfs:domain rdf:resource="#Course"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#int"/>
    </owl:DatatypeProperty>

    <owl:Class rdf:about="#Student">
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#enrolledIn"/>
                <owl:someValuesFrom rdf:resource="#Course"/>
            </owl:Restriction>
        </rdfs:subClassOf>
    </owl:Class>

    <owl:Class rdf:about="#Faculty">
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#teaches"/>
                <owl:cardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:cardinality>
            </owl:Restriction>
        </rdfs:subClassOf>
    </owl:Class>

    <owl:Class rdf:about="#Student">
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#enrolledIn"/>
                <owl:cardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:cardinality>
            </owl:Restriction>
        </rdfs:subClassOf>
    </owl:Class>

    <owl:Class rdf:about="#Faculty">
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#teaches"/>
                <owl:maxCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:maxCardinality>
            </owl:Restriction>
        </rdfs:subClassOf>
    </owl:Class>

</Ontology>
